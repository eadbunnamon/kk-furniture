<div id="main_content">
  <h4>Products</h4>
  <%= semantic_form_for [:admin, @product], validate: true, :html => { :enctype => "multipart/form-data" } do |f| %>
  <fieldset class="inputs">
  	<ol>
      <li>
        <label>Code </label>
        <%= f.text_field  :code %>
      </li>  
  		<li id="product_name_input" class="string input required stringish">
  			<label>Name <abbr title="required">*</abbr></label>
  			<%= f.text_field :name, required: true %>
  		</li>
      <li>
        <label>Price </label>
        <%= f.number_field  :price %>
      </li>     
  		<li>
  			<label>&nbsp;</label>
  			<%= f.check_box	:best_seller %>
        สินค้าขายดี
  		</li>    	
      <li>
        <label>Detail </label>
        <%= f.text_area  :detail, :rows => 5 %>
      </li>  
      <li>
        <label>Description </label>
        <%= f.text_area  :description, :rows => 5 %>
      </li>  
      <li>
        <label>Category </label>
        <%= f.select :category_id, options_for_select(Category.all.map{|c| ["#{c.name}", c.id]}), prompt: "เลือกประเภทสินค้า"  %>
      </li>  
      <li>
        <label>Rooms </label>
        <div>
          <%= select_tag "rooms[]", 
                options_from_collection_for_select(Room.all, 'id', 'name', @product.rooms.map(&:id)), 
                multiple: true,
                include_blank: true,
                id: "rooms"
          %>
        </div>
      </li>  
  	</ol>    	
  </fieldset>

  <div>
    <fieldset class="actions">
      <ol>
          <li><%= f.submit "Save" %></li>            
      </ol>
    </fieldset>
  </div>
      
  <% end %>
</div>

<%= render "add_photo" if action_name == "edit" %>