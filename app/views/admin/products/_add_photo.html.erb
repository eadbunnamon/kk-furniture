<div class='panel' id="photo_panel">
  <h3>Upload photo</h3>
  <div id='file_field'>
    <%= form_for Photo.new, url: upload_photo_admin_product_path, method: "PUT", :html => {:multipart => true} do |f| %>
      <%= hidden_field_tag "product_id", @product.id %>
      <%= hidden_field_tag "past_action", action_name %>
      <%= f.file_field "photo", required: "true" %>
      <%= f.submit "upload", id: "upload" %>
    <% end %>
  </div>
  <div id='photos'>
    <% @product.photos.each do |photo| %>
      <div class='thumb-image'>
      <%= image_tag photo.photo.thumb.url %>
      <%= link_to ' ', delete_photo_admin_product_path(photo_id: photo.id, past_action: action_name), method: "DELETE", class: "delete icon-white icon-remove", confirm: "ต้องการลบภาพนี้ ?" %>
      </div>
    <% end %>
  </div>
</div>