<div class="border-bottom">
  <h5>สินค้ามาใหม่</h5>
</div>
<br>
<br>

<ul class="thumbnails">
  <% (@newest_products || []).each do |product| %>
    <li class="span4">
      <a href="<%= product_path(product, newest_products: true) %>" class="thumbnail">
        <p class="corner-left"><%= number_to_currency(product.price, unit: "฿", precision: 0) %></p>
        <%= image_tag product.photos.first.photo.thumb.url if product.photos.first.present? %>
        <p class="text-center product-name"><%= product.name %></p>
        <span class='hidden'><%= product.view %></span>
      </a>    
    </li>
    <% end %>
</ul>
