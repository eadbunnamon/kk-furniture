<!-- Best Sellers -->
<div id="best-sellers"  class="border-bottom">
	<p class="text-title bold">สินค้าขายดี</p>
	<!-- <hr class="separate-title">	 -->
</div>

<div class="products">
	<ul class="thumbnails">
		<% (@best_sellers || []).each do |best| %>
	    <li class="span4">
	    	<a href="" class="thumbnail">
	    		<p class="corner-left"><%= number_to_currency(best.price, unit: "฿", precision: 0) %></p>
	    		<%= image_tag best.photos.first.photo.thumb.url %>
	    		<p class="text-center product-name"><%= best.name %></p>
	    	</a>
