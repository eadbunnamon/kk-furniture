<div class="border-bottom">
	<h5><%= @category.name %></h5>
</div>
<br>
<br>

<ul class="thumbnails">
  <% (@category.products || []).each do |product| %>
    <li class="span4">
      <a href="<%= product_path(product, categoryid: @category) %>" class="thumbnail">
        <p class="corner-left"><%= number_to_currency(product.price, unit: "à¸¿", precision: 0) %></p>
        <%= image_tag product.photos.first.photo.thumb.url if product.photos.first.present? %>
        <p class="text-center product-name"><%= product.name %></p>
      </a>    
    </li>
    <% end %>
</ul>